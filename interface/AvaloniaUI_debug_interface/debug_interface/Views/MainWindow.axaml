<!--  MainWindow.axaml  -->
<Window
    x:Class="debug_interface.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:debug_interface.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:debug_interface.Models"
    xmlns:vm="using:debug_interface.ViewModels"
    x:Name="MainWindowElement"
    Title="THUAI8 调试界面"
    Width="1200"
    Height="800"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/eesast_logo_32x32.png"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="ProgressBar:horizontal">
            <Setter Property="MinWidth" Value="130" />
            <Setter Property="MinHeight" Value="0" />
        </Style>
        <Style Selector="ProgressBar:vertical">
            <Setter Property="MinWidth" Value="0" />
            <Setter Property="MinHeight" Value="0" />
        </Style>
    </Window.Styles>


    <Grid ColumnDefinitions="3*,5.5*" RowDefinitions="*">

        <!--  左侧区域  -->
        <Grid Background="AliceBlue" RowDefinitions="5*,5*,2*">

            <!--  取经队区域  -->
            <Grid Grid.Row="0" RowDefinitions="Auto,*,Auto">

                <!--  取经队伍标题行  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="5"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        Background="LightGoldenrodYellow"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="Brown"
                        Text="取经队伍" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="{Binding BuddhistTeamEconomy, StringFormat='经济: {0}'}" />
                </StackPanel>

                <!--  取经团队角色信息  -->
                <ScrollViewer
                    Grid.Row="1"
                    Margin="2"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding BuddhistsTeamCharacters}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>

                                <WrapPanel ItemWidth="140" Orientation="Horizontal" />
                                <!-- <UniformGrid Columns="3" /> -->
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!--  Views\MainWindow.axaml  -->
                        <!--  替换 BuddhistsTeamCharacters 和 MonstersTeamCharacters 的 ItemTemplate 内容  -->

                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:CharacterViewModel">
                                <Border
                                    MinWidth="130"
                                    Margin="3"
                                    Padding="5"
                                    Background="White"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    CornerRadius="5">


                                    <!--  *** 使用 Grid 实现紧凑布局 ***  -->
                                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,*,Auto">
                                        <!--  Row 0: 名字 (跨列居中)  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.ColumnSpan="2"
                                            Margin="0,0,0,3"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Text="{Binding Name}"
                                            ToolTip.Tip="{Binding Guid, StringFormat='Guid: {0}'}" />

                                        <!--  Row 1: HP 条 (跨列)  -->
                                        <Border
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BorderThickness="1"
                                            CornerRadius="2">
                                            <ProgressBar
                                                Height="14"
                                                MinWidth="100"
                                                Margin="1"
                                                FontSize="8"
                                                Foreground="{Binding TeamId, Converter={StaticResource TeamIdToColorConverter}}"
                                                Maximum="{Binding MaxHp}"
                                                ProgressTextFormat="{}{0}/{3}"
                                                ShowProgressText="True"
                                                Value="{Binding Hp}" />
                                        </Border>

                                        <!--  Row 2: 主动状态  -->
                                        <!--  在元素上添加 Margin 来模拟 Spacing  -->
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,2,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="9"
                                            FontWeight="SemiBold"
                                            Text="主动状态:" />
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="9"
                                            Text="{Binding ActiveState}"
                                            TextWrapping="Wrap" />

                                        <!--  Row 3: 效果/状态  -->
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Margin="0,2,5,0"
                                            VerticalAlignment="Top"
                                            FontSize="9"
                                            FontWeight="SemiBold"
                                            Text="被动/效果:" />
                                        <StackPanel
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            IsVisible="{Binding StatusEffects.Count}"
                                            Spacing="1">
                                            <ItemsControl ItemsSource="{Binding StatusEffects}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock
                                                            FontSize="8"
                                                            Text="{Binding}"
                                                            TextWrapping="Wrap" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Top"
                                            FontSize="8"
                                            FontStyle="Italic"
                                            IsVisible="{Binding !StatusEffects.Count}"
                                            Text="无" />

                                        <!--  Row 4: 装备  -->
                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Margin="0,2,5,0"
                                            VerticalAlignment="Top"
                                            FontSize="9"
                                            FontWeight="SemiBold"
                                            Text="装备:" />
                                        <StackPanel
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            IsVisible="{Binding EquipmentInventory.Count}"
                                            Spacing="1">
                                            <ItemsControl ItemsSource="{Binding EquipmentInventory}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:EquipmentItem">
                                                        <TextBlock
                                                            FontSize="8"
                                                            Text="{Binding}"
                                                            TextWrapping="Wrap" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Top"
                                            FontSize="8"
                                            FontStyle="Italic"
                                            IsVisible="{Binding !EquipmentInventory.Count}"
                                            Text="无" />

                                        <!--  5: 坐标  -->
                                        <TextBlock
                                            Grid.Row="5"
                                            Grid.ColumnSpan="2"
                                            Margin="0,2,0,0"
                                            HorizontalAlignment="Left"
                                            FontSize="8"
                                            Foreground="Gray"
                                            IsVisible="{Binding ShowCoordinates}"
                                            Text="{Binding Coordinates}" />

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!--  取经方建筑信息 (绑定到新的属性)  -->
                <TextBlock
                    Grid.Row="2"
                    Margin="5"
                    FontSize="10"
                    FontStyle="Italic"
                    Text="{Binding BuddhistTeamBuildingInfo}"
                    TextWrapping="Wrap" />
            </Grid>

            <!--  妖怪队区域  -->
            <Grid Grid.Row="1" RowDefinitions="Auto,1*,Auto">
                <!--  妖怪队伍标题行  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="5"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        Background="LightBlue"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="DarkBlue"
                        Text="妖怪队伍" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="{Binding MonstersTeamEconomy, StringFormat='经济: {0}'}" />
                </StackPanel>

                <!--  妖怪团队角色信息  -->
                <ScrollViewer
                    Grid.Row="1"
                    Margin="2"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding MonstersTeamCharacters}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="140" Orientation="Horizontal" />
                                <!-- <UniformGrid Columns="3" /> -->
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!--  Views\MainWindow.axaml  -->
                        <!--  在 ItemsControl for BuddhistsTeamCharacters/MonstersTeamCharacters 内部  -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:CharacterViewModel">
                                <Border
                                    MinWidth="130"
                                    Margin="3"
                                    Padding="5"
                                    Background="White"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    CornerRadius="5">


                                    <!--  *** 使用 Grid 实现紧凑布局 ***  -->
                                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,*,Auto">
                                        <!--  Row 0: 名字 (跨列居中)  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.ColumnSpan="2"
                                            Margin="0,0,0,3"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Text="{Binding Name}"
                                            ToolTip.Tip="{Binding Guid, StringFormat='Guid: {0}'}" />

                                        <!--  Row 1: HP 条 (跨列)  -->
                                        <Border
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BorderThickness="1"
                                            CornerRadius="2">
                                            <ProgressBar
                                                Height="14"
                                                MinWidth="100"
                                                Margin="1"
                                                FontSize="8"
                                                Foreground="{Binding TeamId, Converter={StaticResource TeamIdToColorConverter}}"
                                                Maximum="{Binding MaxHp}"
                                                ProgressTextFormat="{}{0}"
                                                ShowProgressText="True"
                                                Value="{Binding Hp}" />
                                        </Border>

                                        <!--  Row 2: 主动状态  -->
                                        <!--  在元素上添加 Margin 来模拟 Spacing  -->
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,2,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="9"
                                            FontWeight="SemiBold"
                                            Text="主动状态:" />
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="9"
                                            Text="{Binding ActiveState}"
                                            TextWrapping="Wrap" />

                                        <!--  Row 3: 效果/状态  -->
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Margin="0,2,5,0"
                                            VerticalAlignment="Top"
                                            FontSize="9"
                                            FontWeight="SemiBold"
                                            Text="被动/效果:" />
                                        <StackPanel
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            IsVisible="{Binding StatusEffects.Count}"
                                            Spacing="1">
                                            <ItemsControl ItemsSource="{Binding StatusEffects}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock
                                                            FontSize="8"
                                                            Text="{Binding}"
                                                            TextWrapping="Wrap" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Top"
                                            FontSize="8"
                                            FontStyle="Italic"
                                            IsVisible="{Binding !StatusEffects.Count}"
                                            Text="无" />

                                        <!--  Row 4: 装备  -->
                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Margin="0,2,5,0"
                                            VerticalAlignment="Top"
                                            FontSize="9"
                                            FontWeight="SemiBold"
                                            Text="装备:" />
                                        <StackPanel
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            IsVisible="{Binding EquipmentInventory.Count}"
                                            Spacing="1">
                                            <ItemsControl ItemsSource="{Binding EquipmentInventory}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:EquipmentItem">
                                                        <TextBlock
                                                            FontSize="8"
                                                            Text="{Binding}"
                                                            TextWrapping="Wrap" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Top"
                                            FontSize="8"
                                            FontStyle="Italic"
                                            IsVisible="{Binding !EquipmentInventory.Count}"
                                            Text="无" />

                                        <TextBlock
                                            Grid.Row="5"
                                            Grid.ColumnSpan="2"
                                            Margin="0,2,0,0"
                                            HorizontalAlignment="Left"
                                            FontSize="8"
                                            Foreground="Gray"
                                            IsVisible="{Binding ShowCoordinates}"
                                            Text="{Binding Coordinates}" />

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!--  妖怪方建筑信息 (绑定到新的属性)  -->
                <TextBlock
                    Grid.Row="2"
                    Margin="5"
                    FontSize="10"
                    FontStyle="Italic"
                    Text="{Binding MonstersTeamBuildingInfo}"
                    TextWrapping="Wrap" />


            </Grid>

            <Grid Grid.Row="2" RowDefinitions="4*,*">
                <!--  日志区域  -->
                <Border
                    Grid.Row="0"
                    Margin="2"
                    BorderBrush="Gray"
                    BorderThickness="0,1,0,0">
                    <!--  上边框分隔  -->
                    <Grid RowDefinitions="Auto,*">
                        <!--  Console 标题  -->
                        <TextBlock
                            Grid.Row="0"
                            Margin="5,2"
                            FontWeight="Bold"
                            Text="事件日志" />

                        <!--  日志显示区域  -->
                        <ScrollViewer
                            Grid.Row="1"
                            Margin="2"
                            VerticalAlignment="Top"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LogConsoleVM.LogEntries}">
                                <ItemsControl.ItemTemplate>
                                    <!--  使用 DataTemplate 显示 LogEntry  -->
                                    <DataTemplate x:DataType="vm:LogEntry">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock
                                                FontSize="9"
                                                Foreground="Gray"
                                                Text="{Binding Timestamp, StringFormat='HH:mm:ss.fff'}" />
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="{Binding Color}"
                                                Text="{Binding Message}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <!--  (可选) 让列表自动滚动到底部  -->
                                <!--  需要一些额外的代码或行为来实现  -->
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
                <!--  连接状态  -->
                <TextBlock
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    FontSize="10"
                    Foreground="Gray"
                    Text="{Binding ConnectionStatus}" />
            </Grid>

        </Grid>

        <!--  右侧区域  -->
        <Grid Grid.Column="1" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  *** 浮动的 Expander ***  -->
            <Canvas Panel.ZIndex="1">
                <!--  确保 Canvas 在上层  -->
                <Expander
                    Canvas.Top="0"
                    Canvas.Right="5"
                    MaxWidth="200"
                    Padding="2"
                    Background="#80FFFFFF"
                    BorderBrush="Gray"
                    BorderThickness="0.5"
                    CornerRadius="12"
                    ExpandDirection="Down">
                    <Expander.Header>
                        <TextBlock
                            MaxHeight="100"
                            FontWeight="Bold"
                            Text="地图图例" />
                    </Expander.Header>
                    <ScrollViewer MaxHeight="400">
                        <!--  *** 使用 ItemsControl 绑定图例数据 ***  -->
                        <ItemsControl ItemsSource="{Binding MapLegendItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:LegendItem">
                                    <!--  设置 DataTemplate 的数据类型  -->
                                    <StackPanel Margin="2" Orientation="Horizontal">
                                        <!--  色块  -->
                                        <Border
                                            Width="15"
                                            Height="15"
                                            Margin="0,0,5,0"
                                            Background="{Binding Color}"
                                            BorderBrush="{Binding Stroke, FallbackValue={x:Null}}"
                                            BorderThickness="{Binding BorderThickness}" />
                                        <!--  描述文本  -->
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Text="{Binding Description}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Expander>
            </Canvas>

            <!--  时间、比分  -->
            <StackPanel
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="20,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="25"
                    Text="{Binding CurrentTime}" />
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    Foreground="Red"
                    Text="取经队得分:" />
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Foreground="Red"
                    Text="{Binding RedScore}" />
                <TextBlock
                    Margin="20,0,10,0"
                    VerticalAlignment="Center"
                    Foreground="Blue"
                    Text="妖怪队得分:" />
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Foreground="Blue"
                    Text="{Binding BlueScore}" />
            </StackPanel>

            <!--  地图  -->
            <Border
                Grid.Row="1"
                Margin="5"
                Background="Transparent"
                BorderBrush="Gray"
                BorderThickness="0"
                ClipToBounds="True">
                <!--  MapView 保持不变  -->
                <local:MapView />
            </Border>



        </Grid>

    </Grid>
</Window>
